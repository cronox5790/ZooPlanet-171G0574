@model ZooPlanet.Areas.Admin.Models.ViewModels.AgregarViewModels
@{ Layout = "_Layout"; }

<h1>Agregar Especies</h1>

<form method="post" asp-area="Admin" asp-controller="Home" asp-action="Agregar">
    <label>Nombre:</label>
    <input required asp-for="Animal.Especie" />@{ Layout = "_Layout"; }
    <label>Clase:</label>
    <select required asp-for="Animal.IdClase" asp-items="@(new SelectList(Model.Clases, "Id", "Nombre"))">
        <option value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input required asp-for="Animal.Habitat" />
    <label>Peso:</label>
    <input type="number" step="0.1" asp-for="Animal.Peso" />
    <label>Tamaño:</label>
    <input step="0.1" asp-for="Animal.Tamaño" />
    <label>Observaciones:</label>
    <textarea asp-for="Animal.Observaciones"></textarea>
    <p>@Html.ValidationSummary()</p>
    <input type="submit" value="Agregar" />

    <a href="~/Administrador">
        <input type="button" value="Cancelar" />
    </a>
</form>